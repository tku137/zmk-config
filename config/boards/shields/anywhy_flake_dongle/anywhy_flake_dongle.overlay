/*  Anywhy-Flake Prospector Dongle  –  stub keyboard            */
#include <dt-bindings/zmk/matrix_transform.h>

 / {
    /* ❶  No switches → mock kscan */
    mock_kscan: kscan_0 {
        compatible = "zmk,kscan-mock";
        rows = <1>; columns = <1>; events = <0>;
    };

    /* ❷  1×1 transform (needs RC(row,col) macro) */
    small_transform: small_transform {
        compatible = "zmk,matrix-transform";
        rows = <1>; columns = <1>;
        map  = <0>;
    };

    /* ❸  Layout LABEL ***small_layout***  – matches keymap-drawer */
    small_layout: small_layout_0 {
        compatible   = "zmk,physical-layout";
        display-name = "Dongle";
        transform    = <&small_transform>;
        kscan        = <&mock_kscan>;
        /* no `keys` property → allowed once Studio is off */
    };

    /* ❹  Tell ZMK to use the stub kscan + layout */
    chosen {
        zmk,kscan  = &mock_kscan;
        zmk,layout = &small_layout;   /* <- solves ‘undefined node label’ */
    };
};


